{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.ts",  
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "cleanDistDir": true,    
        "includeFiles": [        
          "vite.config.ts",
          "package-lock.json"
        ]
      }
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/index.html",
      "headers": {              
        "Content-Type": "text/html",
        "Cache-Control": "no-cache"
      }
    }
  ],
  "routes": [                 
    {
      "src": "/assets/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000" }
    }
  ]
}